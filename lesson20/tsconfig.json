{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["src/pages/*"],
        "@components/*": ["src/components/*"],
        "@support/*": ["tests/support/*"]
      }
    },
    "include": ["tests/**/*.ts", "src/**/*.ts"]
  }
  